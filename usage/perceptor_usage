require ('./lib/parser.rb')
require ('./lib/perceptron.rb')
p = Perceptron.new(5)
parser = Parser.new
parser.load_file('scraper/training_data/sanitised_good.txt')
parser.parse(:good)
parser.load_file('scraper/training_data/sanitised_bad.txt')
parser.parse(:bad)

6.times { parser.parse_data.each { |hash| p.train(hash) }}
p.weight

Weight converged after 6 times
